
<%= simple_form_for @restaurant do |r| %>

<%= r.input :name, label: 'Restaurant name',error: 'Name is mandatory, please specify one' %>

<%= r.input :address, error: 'Adress is mandatory, please specify one' %>
<%= r.input :category,label: 'Categories: cinese, italian, japanese, french, belgian' ,error: 'Category is mandatory, please specify one' %>
<%= r.input :phone_number %>
<%= r.button :submit %>
<% end %>
